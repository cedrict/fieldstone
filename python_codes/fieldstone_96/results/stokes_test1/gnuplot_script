#gnuplot script
set term pdf enhanced font "Times,12pt"
set grid
set key outside

###############################

set xlabel 'co-latitude'
set ylabel 'v_t at cmb (CR)'
set output 'cmb_vt_cr.pdf'
plot[0:pi][-5e-10:2e-10]\
'cr_hhh200/cmb_vt_0000.ascii'   ps .2 t 'P_2^+xP_{-1} - h=200',\
'cr_hhh150/cmb_vt_0000.ascii'   ps .2 t 'P_2^+xP_{-1} - h=150',\
