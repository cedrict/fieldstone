#gnuplot script
set term pdf enhanced font "Times,12pt"
set grid
set key outside


set xlabel 'a'
set ylabel 'topo'
set output 'dynamic_topography_surf.pdf'
plot[][]\
'cr/dynamic_topography_surf_0000.ascii' ps .3 t 'P_2^+xP_{-1}',\
'p2p1/dynamic_topography_surf_0000.ascii' ps .3 t 'P_2xP_{1}',\

set xlabel 'a'
set ylabel 'topo'
set output 'dynamic_topography_cmb.pdf'
plot[][]\
'cr/dynamic_topography_cmb_0000.ascii' ps .3 t 'P_2^+xP_{-1}',\
'p2p1/dynamic_topography_cmb_0000.ascii' ps .3 t 'P_2xP_{1}',\

set xlabel 'a'
set ylabel 'vel'
set output 'cmb_vt.pdf'
plot[][]\
'cr/cmb_vt_0000.ascii' ps .3 t 'P_2^+xP_{-1}',\
'p2p1/cmb_vt_0000.ascii' ps .3 t 'P_2xP_{1}',\

set xlabel 'a'
set ylabel 'vel'
set output 'surface_vt.pdf'
plot[][]\
'cr/surface_vt_0000.ascii' ps .3 t 'P_2^+xP_{-1}',\
'p2p1/surface_vt_0000.ascii' ps .3 t 'P_2xP_{1}',\

