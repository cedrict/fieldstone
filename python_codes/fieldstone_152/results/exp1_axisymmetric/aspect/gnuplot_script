set term pdf
set grid
set key outside
set title 'axisymmetric geometry'
set xlabel '{/Symbol q}'
set ylabel 'dynamic topography'

set output 'dynamic_topography.pdf'
plot[-pi/2:pi/2][]\
'dynamic_topography_surface.3' u (atan2($3,sqrt($1**2+$2**2))):4 pt 5 ps .12 t 'ASPECT (3+0)',\
'd_t_R2_16.ascii' u 4:($3) w l lw 2.5 t 'dyn. topo. 16x96 ',\
'd_t_R2_32.ascii' u 4:($3) w l lw 1.5 t 'dyn. topo. 32x192',\
0 lt -1 lw 0.5 

