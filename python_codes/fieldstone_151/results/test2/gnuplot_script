#gnuplot script
set term pdf enhanced font "Times,12pt"
set grid
set log xy
set key outside 

set xlabel 'h'
set ylabel 'error'

set output 'errv.pdf'
plot[][]\
'errors_fs1'   u (1./$3):6 w lp ps .5 t 'fs=1',\
'errors_fs3'   u (1./$3):6 w lp ps .5 t 'fs=3',\
'errors_fs1_T' u (1./$3):6 w lp ps .5 t 'fs=1, T',\
'errors_fs3_T' u (1./$3):6 w lp ps .5 t 'fs=3, T',\
x**6/1e7 lt -1 dt 2 t 'h^6' 


set output 'errp.pdf'
plot[][]\
'errors_fs1'   u (1./$3):9 w lp ps .5 t 'fs=1',\
'errors_fs3'   u (1./$3):9 w lp ps .5 t 'fs=3',\
'errors_fs1_T' u (1./$3):6 w lp ps .5 t 'fs=1, T',\
'errors_fs3_T' u (1./$3):6 w lp ps .5 t 'fs=3, T',\
x**2/1e1 lt -1 dt 2 t 'h^2' 

set xlabel 'nel'
set ylabel 'measure volume'
unset log y
set output 'areas.pdf'
plot[][9.42:]\
'areas'   u 8:5 w lp ps .4 t 'T=False',\
'areas_T' u 8:5 w lp ps .4 t 'T=True',\
pi*(2**2-1**2) w l lt -1 dt 2 t 'analytical' 

